<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/subjects_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:hint="@string/subject_name_hint"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="16dp">

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
        android:id="@+id/subject_exposed_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
        android:labelFor="@id/subject_exposed_menu"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/lesson_time_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:hint="@string/lesson_time_hint"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="16dp">

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/lesson_time_exposed_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:labelFor="@+id/lesson_time_exposed_menu"/>
    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>